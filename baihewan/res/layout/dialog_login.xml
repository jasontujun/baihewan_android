<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_frame"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="@drawable/frame_white">
    <!--装饰符-->
    <ImageView
            android:id="@+id/decoration"
            android:layout_width="5dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:src="@color/light_green"/>
    <!--内容-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
        <!--提示文字-->
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每个南大孩纸的心中 "
                android:textSize="15sp"
                android:textColor="@color/black"/>
        <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="都有一片百荷湾 "
                android:textSize="15sp"
                android:textColor="@color/black"/>
        <!--分隔符-->
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:src="@color/light_green"/>
        <!--账号-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号:"
                    android:textSize="15sp"
                    android:textColor="@color/light_green"/>
                <EditText
                        android:id="@+id/username_input"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:textColor="@color/light_green"
                        android:background="@drawable/frame_input"/>
        </LinearLayout>
        <!--密码-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码:"
                    android:textSize="15sp"
                    android:textColor="@color/light_green"/>
                <EditText
                        android:id="@+id/password_input"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:password="true"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:textColor="@color/light_green"
                        android:background="@drawable/frame_input"/>
        </LinearLayout>
        <!--选项栏-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
            <CheckBox
                    android:id="@+id/remember_pw_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textSize="15sp"
                    android:textColor="@color/light_green"/>
            <CheckBox
                    android:id="@+id/auto_login_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="自动登录"
                    android:textSize="15sp"
                    android:textColor="@color/light_green"/>
        </LinearLayout>
        <!--按钮-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                    <Button
                            android:id="@+id/left_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_login_green"/>
                    <TextView
                            android:id="@+id/left_btn_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号登录"
                            android:textSize="10sp"
                            android:textColor="@color/light_green"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                    <Button
                            android:id="@+id/right_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_login_visitor"/>
                    <TextView
                            android:id="@+id/right_btn_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我是游客"
                            android:textSize="10sp"
                            android:textColor="@color/light_green"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>