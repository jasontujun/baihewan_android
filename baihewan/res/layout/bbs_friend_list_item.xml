<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <com.morln.app.lbstask.ui.controls.ChangeImageLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white">
        <!--头像-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="27dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/label_head_icon"/>
        <!--文字-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <!--id-->
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="Gwind "
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp"/>
            <!--备注名-->
            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="hai~hai"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"/>
        </LinearLayout>
        <!--站内信按钮-->
        <Button
                android:id="@+id/mail_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_mail_circle_gray"/>
        <!--分隔符-->
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.4dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/separator_horizontal"/>
    </com.morln.app.lbstask.ui.controls.ChangeImageLayout>

</LinearLayout>