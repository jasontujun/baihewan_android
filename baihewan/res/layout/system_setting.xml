<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/frame_system_bg">
    <!--顶栏-->
    <RelativeLayout
            android:id="@+id/top_frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white">
        <!--左按钮-->
        <ImageView
                android:id="@+id/left_btn"
                android:layout_width="35dp"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_top_menu"/>
        <!--新消息提示-->
        <ImageView
                android:id="@+id/left_btn_tip"
                android:layout_width="6dp"
                android:layout_height="22.5dp"
                android:layout_margin="6dp"
                android:background="@drawable/tip_remind"
                android:visibility="gone"/>
        <!--右按钮-->
        <ImageView
                android:id="@+id/right_btn"
                android:layout_width="35dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_top_friend"/>
        <!--标签-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/top_tip1"
                    android:layout_width="80dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@color/light_green"/>
            <TextView
                    android:id="@+id/top_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text=" 设置 "
                    android:textSize="20sp"
                    android:textColor="@color/light_green"/>
        </LinearLayout>
    </RelativeLayout>

    <!--内容-->
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/shadow"
            android:layout_margin="5dp"
            android:scrollbars="vertical"
            android:fadingEdge="none"
            android:background="@drawable/frame_white">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:orientation="vertical">
            <!--自动登录-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="自动登录:"
                            android:textColor="@color/light_green"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="进入百荷湾时自动登陆账号 "
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>
                </LinearLayout>
                <Button
                        android:id="@+id/auto_login_btn"
                        android:layout_width="61.7dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_on"/>
            </RelativeLayout>
            <!--自动注销-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动注销:"
                            android:textColor="@color/light_green"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="退出百荷湾时将自动注销账号 "
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>
                </LinearLayout>
                <Button
                        android:id="@+id/auto_logout_btn"
                        android:layout_width="61.7dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_on"/>
            </RelativeLayout>
            <!--自动同步收藏-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动同步收藏:"
                            android:textColor="@color/light_green"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="只会在有改动的情况下同步收藏的帖子 "
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>
                </LinearLayout>
                <Button
                        android:id="@+id/update_collect_btn"
                        android:layout_width="61.7dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_on"/>
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/update_collect_frame"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="间隔时间:"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>
                <RadioGroup
                        android:id="@+id/update_collect_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                    <RadioButton
                            android:id="@+id/update_collect_op1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3小时"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                    <RadioButton
                            android:id="@+id/update_collect_op2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12小时"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                    <RadioButton
                            android:id="@+id/update_collect_op3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="24小时"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                </RadioGroup>
            </LinearLayout>
            <!--自动下载图片-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自动下载图片:"
                            android:textColor="@color/light_green"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="看帖时自动下载图片，无须手动点击加载 "
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>
                </LinearLayout>
                <Button
                        android:id="@+id/auto_download_img_btn"
                        android:layout_width="61.7dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_on"/>
            </RelativeLayout>
            <RadioGroup
                    android:id="@+id/auto_download_img_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                <RadioButton
                        android:id="@+id/auto_download_img_op1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="仅WIFI条件下"
                        android:textSize="12sp"
                        android:textColor="@color/light_green"/>
                <RadioButton
                        android:id="@+id/auto_download_img_op2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="始终打开"
                        android:textSize="12sp"
                        android:textColor="@color/light_green"/>
            </RadioGroup>
            <!--站内信提醒-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="站内信提醒:"
                            android:textColor="@color/light_green"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="自动检测是否有新的站内信并提醒您 "
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>
                </LinearLayout>
                <Button
                        android:id="@+id/auto_mail_remind_btn"
                        android:layout_width="61.7dp"
                        android:layout_height="23dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_on"/>
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/auto_mail_remind_frame"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="间隔时间:"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>
                <RadioGroup
                        android:id="@+id/auto_mail_remind_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                    <RadioButton
                            android:id="@+id/auto_mail_remind_op1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="90秒"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                    <RadioButton
                            android:id="@+id/auto_mail_remind_op2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3分钟"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                    <RadioButton
                            android:id="@+id/auto_mail_remind_op3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10分钟"
                            android:textSize="12sp"
                            android:textColor="@color/light_green"/>
                </RadioGroup>
            </LinearLayout>
            <!--更新版面数据-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <Button
                        android:id="@+id/update_board_btn"
                        android:layout_width="210dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_update_board"/>
            </RelativeLayout>
            <!--检测更新-->
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                <Button
                        android:id="@+id/check_update_btn"
                        android:layout_width="210dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_check_update"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <!--阴影-->
    <ImageView
            android:id="@+id/shadow"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/top_frame"
            android:background="@drawable/shadow_horizontal"/>
</RelativeLayout>