<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/frame_system_bg">
    <!--顶栏-->
    <RelativeLayout
            android:id="@+id/top_frame"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white">
        <!--左按钮-->
        <ImageView
                android:id="@+id/left_btn"
                android:layout_width="35dp"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_top_menu"/>
        <!--新消息提示-->
        <ImageView
                android:id="@+id/left_btn_tip"
                android:layout_width="6dp"
                android:layout_height="22.5dp"
                android:layout_margin="6dp"
                android:background="@drawable/tip_remind"
                android:visibility="gone"/>
        <!--右按钮-->
        <ImageView
                android:id="@+id/right_btn"
                android:layout_width="35dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_top_friend"/>
        <!--Tab标签栏-->
        <LinearLayout
                android:id="@+id/tab_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="34dp"
                android:orientation="horizontal">
            <!--左标签-->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/top_tip1"
                        android:layout_width="80dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@color/light_green"/>
                <TextView
                        android:id="@+id/top_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="标签项1"
                        android:textSize="20sp"
                        android:textColor="@color/light_green"/>
            </LinearLayout>
            <!--右标签-->
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/top_tip2"
                        android:layout_width="80dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@color/light_green"/>
                <TextView
                        android:id="@+id/top_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="标签项2"
                        android:textSize="20sp"
                        android:textColor="@color/light_green"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--内容-->
    <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/top_frame"/>

    <!--阴影-->
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/top_frame"
            android:background="@drawable/shadow_horizontal"/>
</RelativeLayout>