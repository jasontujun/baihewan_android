<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_transparent_green">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
    <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@color/white"/>
    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_marginLeft="5dp"
            android:text="十大热点 "
            android:textColor="@color/dark_gray"
            android:textSize="20sp"/>
    <LinearLayout
            android:id="@+id/nick_name_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:orientation="horizontal"
            android:visibility="gone">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-来自"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"/>
        <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gwind"
                android:textColor="@color/dark_gray"
                android:textSize="10sp"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/select_tip"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-1dp"
            android:layout_centerVertical="true"
            android:src="@drawable/tip_selected"/>
    <!--站内信提醒-->
    <TextView
            android:id="@+id/mail_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:text="5"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/tip_bg_red"
            android:visibility="gone"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.4dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/separator_horizontal"/>
    </RelativeLayout>
</RelativeLayout>